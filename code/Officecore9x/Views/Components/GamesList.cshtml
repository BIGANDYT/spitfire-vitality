@if (Model.Data != null)
{
    <div class="row">
        @foreach (var listitem in Model.Data)
        {
            <div class="col-lg-4">
                <div class="game-padding">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>
                                @Html.Sitecore().BeginField("PracticePlayLink", listitem, new { haschildren = true, @class = "text-cut-off" })
                                @Html.Sitecore().Field("Name", listitem)
                                @Html.Sitecore().EndField()
                            </h4>
                        </div>
                    </div>                    
                    <div class="row">
                        <div class="col-lg-12 game_lozenge_container">
                            @Html.Sitecore().BeginField("RealPlayLink", listitem, new { haschildren = true })
                            @Html.Sitecore().Field("GameImage", listitem, new { @class = "game-image" })
                            @Html.Sitecore().EndField()
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.Sitecore().Field("FooterLink", listitem)
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12">Please select a datasource</div>
    </div>
}
