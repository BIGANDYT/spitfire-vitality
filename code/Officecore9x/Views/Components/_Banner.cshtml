@model Sitecore.Mvc.Presentation.RenderingModel
<div class="row" style="background-color: #@Model.Item["BannerBackColor"]">
    <div class="col-lg-7">
        <div class="row">
            <div class="col-lg-12">
                <h1 id="header1" class="fittext" style="color: #@Html.Sitecore().CurrentItem.Fields["BannerTitle1Color"].Value">@Html.Sitecore().Field("BannerTitle1")</h1>
            </div>
            <div class="col-lg-12">
                <h1 id="header2" class="fittext" style="color: #@Html.Sitecore().CurrentItem.Fields["BannerTitle2Color"].Value">@Html.Sitecore().Field("BannerTitle2")</h1>
            </div>
            <div class="col-lg-12">
                <h1 id="header3" class="fittext" style="color: #@Html.Sitecore().CurrentItem.Fields["BannerTitle3Color"].Value">@Html.Sitecore().Field("BannerTitle3")</h1>
            </div>
            <div class="col-lg-12">
                @Html.Sitecore().Field("BannerLink", @Model.Item, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
    <div class="col-lg-5 visible-lg-block">
        @Html.Sitecore().Field("BannerImage", @Model.Item, new { @class = "img-responsive" })
    </div>
</div>