@{
    string CssClass = String.Empty;
    string CssStyle = String.Empty;
    var rc = Sitecore.Mvc.Presentation.RenderingContext.CurrentOrNull;
    if (rc != null)
    {
        var parms = rc.Rendering.Parameters;
        CssClass = string.IsNullOrEmpty(parms["CssClass"]) ? String.Empty : parms["CssClass"];
        CssStyle = string.IsNullOrEmpty(parms["CssStyle"]) ? String.Empty : parms["CssStyle"];
    }
    <div class="@CssClass" style="@CssStyle">
        @Html.Sitecore().DynamicPlaceholder("col")
    </div>
}