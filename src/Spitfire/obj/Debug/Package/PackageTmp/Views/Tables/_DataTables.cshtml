@model Spitfire.Models.TableData
@using Spitfire.Models
@using Spitfire.Constant
@if (Model.Data != null && Model.Data.Count > 0)
{
    foreach (Bet bet in @Model.Data)
    {
        <div class="row top-buffer">
            <div class="col-xs-2 col-lg-1">@bet.time</div>
            <div class="col-xs-10 col-lg-3">@bet.marketName</div>
            <div class="hidden-xs col-lg-1">@bet.icon</div>
            <div class="col-xs-4 col-lg-1"><a class="btn btn-primary" href="#" role="button">@bet.win</a></div>
            <div class="col-xs-4 col-lg-1"><a class="btn btn-primary" href="#" role="button">@bet.draw</a></div>
            <div class="col-xs-4 col-lg-1"><a class="btn btn-primary" href="#" role="button">@bet.lose</a></div>
            <div class="hidden-xs col-lg-2">@bet.relatedBets</div>
            <div class="hidden-xs col-lg-2"><span class="marketgraph">@string.Join(",", @bet.graph)</span></div>
        </div>
    }
}
else
{
    <div class="row top-buffer">
        <div class="col-lg-12">@ErrorConstants.NO_DATA_DATATABLE</div>
    </div>
}