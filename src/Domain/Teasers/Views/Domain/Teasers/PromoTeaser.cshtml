@using Spitfire.SitecoreExtensions.Extensions
<div class="PromoTeaser">
    @if (Model.Item != null)
    {
        <h3>@Html.Sitecore().Field("Title", Model.Item)</h3>
        <div class="price">
            <span class="number"><sup>@Html.Sitecore().Field("Symbol", Model.Item)</sup>@Html.Sitecore().Field("Amount", Model.Item)</span> / @Html.Sitecore().Field("Period", Model.Item)
        </div>
        @Html.Sitecore().Field("Details", Model.Item)

        @Html.Sitecore().Field("Button", Model.Item)
    }

</div>