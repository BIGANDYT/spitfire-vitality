@using Sitecore.Mvc.Presentation
@using Sitecore.Resources.Media
@model RenderingModel
<div class="row margin-bottom-10">
    <div class="col-md-12">
        <div class="content-page">
            <video controls="controls" style="width:100%;" autoplay="@(Sitecore.Context.PageMode.IsNormal ? "autoplay" : string.Empty)">
                <source src="@MediaManager.GetMediaUrl(Model.Item)" type="video/mp4" />
                <div style="width:100%; height:300px; padding: 20px; text-align:center;background-color:#000;color:#fff;">Your browser does not support the <code>video</code> element.</div>
            </video>
        </div>
    </div>
</div>