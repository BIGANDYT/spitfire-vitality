@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    // TODO: clean up
    var home = Sitecore.Context.Database.GetItem("110D559F-DEA5-42EA-9C1C-8A5DF7E70EF9");
    var colourid = home["theme"];
    var colouritem = Sitecore.Context.Database.GetItem(colourid);
    var css = colouritem["css"];
}

@if (Sitecore.Context.PageMode.IsPageEditor)
{
    <div class="color-panel hidden-sm">
        <div class="color-mode-icons icon-color @css">

        </div>
        <div class="color-mode-icons icon-color-close @css" style="display: none;"></div>
        <div class="color-mode @css" style="display: none;">
            <p>DISABLED IN EXPERIENCE EDITOR</p>
        </div>
    </div>
}
else
{
    <div class="color-panel hidden-sm">
        <div class="color-mode-icons icon-color @css">

        </div>
        <div class="color-mode-icons icon-color-close @css" style="display: none;"></div>
        <div class="color-mode @css" style="display: none; width: 350px;">
            <p>ANALYTICS PROFILE</p>
            <!-- amCharts javascript code -->
            <script type="text/javascript">
                AmCharts.makeChart("chartdiv1",
                    {
                        "type": "pie",
                        "path": "https://www.amcharts.com/lib/3/",
                        "labelText": "[[title]]",
                        "labelRadius": 5,
                        "radius": 75,
                        "sequencedAnimation": false,
                        "startDuration": 0,
                        "titleField": "category",
                        "valueField": "column-1",
                        "marginBottom": 0,
                        "marginTop": 0,
                        "fontSize": 10,
                        "theme": "light",
                        "allLabels": [],
                        "balloon": {},
                        "titles": [
                            {
                                "id": "Title-1",
                                "text": "Site Interest"
                            }
                        ],
                        "dataProvider": [
                            {
                                "category": "Mobile",
                                "column-1": 8
                            },
                            {
                                "category": "Surface",
                                "column-1": 6
                            },
                            {
                                "category": "Office",
                                "column-1": 2
                            },
                            {
                                "category": "Xbox",
                                "column-1": "2"
                            }
                        ]
                    }
                );
            </script>

            <div id="chartdiv1" style="width: 100%; height: 250px; background-color: #FFFFFF;"></div>


            <!-- amCharts javascript code -->
            <script type="text/javascript">
                AmCharts.makeChart("chartdiv2",
                    {
                        "type": "pie",
                        "path": "https://www.amcharts.com/lib/3/",
                        "labelText": "[[title]]",
                        "labelRadius": 5,
                        "radius": 75,
                        "sequencedAnimation": false,
                        "startDuration": 0,
                        "titleField": "category",
                        "valueField": "column-1",
                        "marginBottom": 0,
                        "marginTop": 0,
                        "fontSize": 10,
                        "theme": "light",
                        "allLabels": [],
                        "balloon": {},
                        "titles": [
                            {
                                "id": "Title-1",
                                "text": "Gaming Interest"
                            }
                        ],
                        "dataProvider": [
                            {
                                "category": "Action",
                                "column-1": 8
                            },
                            {
                                "category": "Adventure",
                                "column-1": 6
                            },
                            {
                                "category": "Fighting",
