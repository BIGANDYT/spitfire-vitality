@model Spitfire.Library.Models.Core.Components.Snippets.Step

<style type="text/css">
    div.step-@Model.BackgroundText:before {
        opacity: 0.2;
        content: '@Model.BackgroundText'
    }

</style>

<div class="col-md-4 col-sm-4 front-step-col">
    <div class="front-step step-@Model.BackgroundText" style="background: @Model.BackgroundColor">
        <h2 style="color: @Model.TextColor">@Html.Sitecore().Field("Title", Model.Item)</h2>
        <div class="step-content" style="color: @Model.TextColor">@Html.Sitecore().Field("Body", Model.Item)</div>
    </div>
</div>