@using Sitecore.Data.Items
@using Spitfire.SitecoreExtensions.Helpers
@model Spitfire.Library.Models.Text.TestimonialsCarouselModel

<div class="testimonials-carousel">
    @if (Model.Teasers != null)
    {
        foreach (Item item in Model.Teasers)
        {
            <div class="item">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="lead">@Html.Sitecore().Field("Title", item)</p>
                        <hr class="colored">
                        <p class="quote">@Html.Sitecore().Field("Details", item)</p>
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                @Html.Sitecore().Field("Thumbnail", item, new { @class = "img-circle img-responsive" })
                            </div>
                            <div class="testimonial-author">
                                <span class="name">@Html.Sitecore().Field("SubTitle", item)</span>
                                <p class="small">@Html.Sitecore().Field("Type", item)</p>
                                @using (Html.BeginEditFrame(item.Paths.Path, "/sitecore/content/Applications/WebEdit/Edit Frame Buttons/Teasers"))
                                {
                                    <div class="stars">
                                        @for (var i = 0; i < int.Parse(item["star"]); i++)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>