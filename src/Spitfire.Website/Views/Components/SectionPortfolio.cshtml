<section class="portfolio-carousel wow fadeIn">
    @if (Model.Data != null)
    {
        foreach (var item in Model.Data)
        {
            

            <div class="item" style="background-image: url('/Content/img/vitality/portfolio/bg-1.jpg')">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 col-md-push-8">
                            <div class="project-details">
                                <img src="/Content/img/vitality/client-logos/logo-1.png" class="img-responsive client-logo" alt="">
                                <span class="project-name">Project Name</span>
                                <span class="project-description">Branding, Website Design</span>
                                <hr class="colored">
                                <a href="#portfolioModal1" data-toggle="modal" class="btn btn-outline-light">View Details <i class="fa fa-long-arrow-right fa-fw"></i></a>
                            </div>
                        </div>
                        <div class="col-md-8 col-md-pull-4 hidden-xs">
                            @Html.Sitecore().Field("Image", item)
                            @*<img src="/Content/img/vitality/portfolio/mobile-screens.png" class="img-responsive portfolio-image" alt="">*@
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-lg-12">Please select a datasource</div>
        </div>
    }
</section>

