@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    // TODO: Clean up
    var footer = Sitecore.Context.Database.GetItem("7FBC4CFA-EAE4-45A9-B7B5-C2799D2B01F6");
}

<!-- BEGIN TOP BAR -->
<div class="pre-header">
    <div class="container">
        <div class="row">
            <!-- BEGIN TOP BAR LEFT PART -->
            <div class="col-md-6 col-sm-6 additional-shop-info">
                <ul class="list-unstyled list-inline">
                    <li><i class="fa fa-phone"></i><span>@footer["phone"]</span></li>
                    <li><i class="fa fa-envelope-o"></i><span>@Html.Sitecore().Field("email", footer)</span></li>
                </ul>
            </div>
            <!-- END TOP BAR LEFT PART -->
            <!-- BEGIN TOP BAR MENU -->
            <div class="col-md-6 col-sm-6 additional-nav">
                <ul class="list-unstyled list-inline pull-right">
                    @if (Sitecore.Context.IsLoggedIn)
                    {
                        <li><a href="/my-account">My Account</a></li>
                        <li><a href="/logout">Log out</a></li>
                        if (Sitecore.Context.PageMode.IsPageEditor)
                        {
                            <li><a href="/login">Log In</a></li>
                            <li><a href="/register">Registration</a></li>
                        }
                    }
                    else
                    {
                        <li><a href="/login">Log In</a></li>
                        <li><a href="/register">Registration</a></li>
                    }
                </ul>
            </div>
            <!-- END TOP BAR MENU -->
        </div>
    </div>
</div>
<!-- END TOP BAR -->